<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/main_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startOfDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startOfIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />
    <ImageView
        android:id="@+id/bodyOfRadio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".85"
        android:src="@drawable/radio_image"
        app:layout_constraintTop_toBottomOf="@id/startOfDesign"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        app:layout_constraintHeight_percent=".28"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/startOfIcons"
        android:weightSum="3"
        app:layout_constraintHeight_percent=".06"
        >
<ImageView
    android:id="@+id/backButton"
android:padding="7dp"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:src="@drawable/left_click_icons"
    android:layout_weight="1"
    />
        <ImageView
            android:id="@+id/startButton"
android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/start_icon"
            android:layout_weight="1"
            android:scaleType="centerCrop"

            />
        <ImageView
            android:id="@+id/rightButton"

            android:padding="7dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/right_click_icon"
            android:layout_weight="1"

            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bodyOfRadio"
        app:layout_constraintBottom_toTopOf="@id/startOfIcons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="إذاعة القرأن الكريم"
        style="@style/titleRegular"
        android:textStyle="bold"
        />



</androidx.constraintlayout.widget.ConstraintLayout>